{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Django: Run & Debug",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["runserver", "127.0.0.1:8003"],
      "envFile": "${workspaceFolder}/.env",
      "django": true,
      "justMyCode": false
    },
    {
      "name": "Django: Migrate Legacy Addresses",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["migrate_legacy_addresses", "--dry-run"],
      "envFile": "${workspaceFolder}/.env",
      "django": true,
      "justMyCode": false
    },
    {
      "name": "Django: Test Mila",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "test_mila",
        "--location",
        "${input:locationUuid}"
      ],
      "envFile": "${workspaceFolder}/.env",
      "django": true,
      "justMyCode": false
    },
    {
      "name": "Django: Gunicorn (E2E Tests)",
      "type": "debugpy",
      "request": "launch",
      "module": "gunicorn",
      "args": [
        "backend.wsgi:application",
        "--bind",
        "0.0.0.0:8003",
        "--workers",
        "6",
        "--threads",
        "4",
        "--timeout",
        "120",
        "--access-logfile",
        "-"
      ],
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "OBJC_DISABLE_INITIALIZE_FORK_SAFETY": "YES"
      },
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ],
  "inputs": [
    {
      "id": "locationUuid",
      "type": "promptString",
      "description": "UUID de la location Ã  tester"
    }
  ]
}
